{
  "openapi": "3.0.0",
  "info": {
    "title": "Express API com Swagger",
    "version": "1.0.0",
    "description": "Esta é uma API Express simples com documentação automática do Swagger"
  },
  "servers": [
    { "url": "http://localhost:3333/api", "description": "Local server" }
  ],
  "tags": [
    { "name": "Users", "description": "Endpoints relacionados a usuários" },
    { "name": "Tasks", "description": "Endpoints relacionados a tarefas" },
    {
      "name": "Categories",
      "description": "Endpoints relacionados a categorias"
    }
  ],
  "components": {
    "schemas": {
      "Task": {
        "type": "object",
        "properties": {
          "title": { "type": "string", "description": "O título da tarefa" },
          "description": {
            "type": "string",
            "description": "A descrição da tarefa"
          },
          "status": { "type": "string", "description": "O status da tarefa" },
          "user_id": {
            "type": "string",
            "description": "O ID do usuário que criou a tarefa"
          },
          "categories_ids": {
            "type": "array",
            "items": { "type": "string" },
            "description": "Os IDs das categorias associadas à tarefa"
          },
          "enabled": {
            "type": "boolean",
            "description": "Se a tarefa está habilitada"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time",
            "description": "A data e hora de criação da tarefa"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time",
            "description": "A data e hora da última atualização da tarefa"
          }
        }
      },
      "User": {
        "type": "object",
        "properties": {
          "name": { "type": "string", "description": "O nome do usuário" },
          "password": { "type": "string", "description": "A senha do usuário" },
          "email": { "type": "string", "description": "O email do usuário" },
          "photo": { "type": "string", "description": "A foto do usuário" },
          "enabled": {
            "type": "boolean",
            "description": "Se o usuário está habilitado"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time",
            "description": "A data e hora de criação do usuário"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time",
            "description": "A data e hora da última atualização do usuário"
          }
        }
      },
      "Category": {
        "type": "object",
        "properties": {
          "name": { "type": "string", "description": "O nome da categoria" },
          "color": { "type": "string", "description": "A cor da categoria" },
          "user_id": {
            "type": "string",
            "description": "O ID do usuário que criou a categoria"
          },
          "enabled": {
            "type": "boolean",
            "description": "Se a categoria está habilitada"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time",
            "description": "A data e hora de criação da categoria"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time",
            "description": "A data e hora da última atualização da categoria"
          }
        }
      }
    }
  },
  "paths": {
    "/user": {
      "post": {
        "tags": ["Users"],
        "summary": "Cria um novo usuário",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/User" }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Usuário criado com sucesso",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/User" }
              }
            }
          }
        }
      },
      "get": {
        "tags": ["Users"],
        "summary": "Obtém todos os usuários",
        "operationId": "getUsers",
        "parameters": [
          {
            "name": "_id",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "name",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "email",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Lista de usuários obtida com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/User" }
                }
              }
            }
          }
        }
      }
    },
    "/user/{id}": {
      "get": {
        "tags": ["Users"],
        "summary": "Obtém um usuário pelo ID",
        "operationId": "getUserById",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Usuário obtido com sucesso",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/User" }
              }
            }
          }
        }
      },
      "put": {
        "tags": ["Users"],
        "summary": "Atualiza um usuário pelo ID",
        "operationId": "updateUserById",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "password": {
                    "type": "string"
                  }
                },
                "additionalProperties": true
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Usuário atualizado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/User"
                }
              }
            }
          }
        }
      },
      "delete": {
        "tags": ["Users"],
        "summary": "Delete a user by ID",
        "operationId": "deleteUserById",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "User deleted successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/session": {
      "post": {
        "tags": ["Users"],
        "summary": "Cria uma sessão de usuário",
        "operationId": "createSession",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Sessão de usuário criada com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "user": {
                      "$ref": "#/components/schemas/User"
                    },
                    "token": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/task/{user_id}": {
      "get": {
        "tags": ["Tasks"],
        "summary": "Obtém todas as tarefas de um usuário",
        "operationId": "getTasksByUserId",
        "parameters": [
          {
            "name": "user_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "_id",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "title",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "status",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "categories_ids",
            "in": "query",
            "required": false,
            "schema": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          },
          {
            "name": "enabled",
            "in": "query",
            "required": false,
            "schema": {
              "type": "boolean"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Lista de tarefas obtida com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/Task" }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": ["Tasks"],
        "summary": "Cria uma nova tarefa para um usuário",
        "operationId": "createTaskForUser",
        "parameters": [
          {
            "name": "user_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "title": {
                    "type": "string"
                  },
                  "description": {
                    "type": "string"
                  },
                  "status": {
                    "type": "string"
                  },
                  "categories_ids": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  }
                },
                "required": ["title", "description", "status"]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Tarefa criada com sucesso",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Task" }
              }
            }
          }
        }
      }
    },
    "/task/{id}": {
      "get": {
        "tags": ["Tasks"],
        "summary": "Obtém uma tarefa específica",
        "operationId": "getTaskById",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Tarefa obtida com sucesso",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Task" }
              }
            }
          }
        }
      },
      "put": {
        "tags": ["Tasks"],
        "summary": "Atualiza uma tarefa específica",
        "operationId": "updateTask",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/Task" }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Tarefa atualizada com sucesso",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Task" }
              }
            }
          }
        }
      },
      "delete": {
        "tags": ["Tasks"],
        "summary": "Exclui uma tarefa específica",
        "operationId": "deleteTask",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Tarefa excluída com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/category/{user_id}": {
      "get": {
        "tags": ["Categories"],
        "summary": "Obtém todas as categorias de um usuário",
        "operationId": "getCategories",
        "parameters": [
          {
            "name": "user_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "_id",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "name",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "color",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "enabled",
            "in": "query",
            "required": false,
            "schema": {
              "type": "boolean"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Lista de categorias obtida com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/Category" }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": ["Categories"],
        "summary": "Cria uma nova categoria para um usuário",
        "operationId": "createCategory",
        "parameters": [
          {
            "name": "user_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string",
                    "required": true
                  },
                  "color": {
                    "type": "string",
                    "required": true
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Categoria criada com sucesso",
